---
import Chemistry from "@/icons/Chemistry.astro";
import Mathematics from "@/icons/Mathematics.astro";
import Search from "@/icons/Search.astro";
import Physics from "@/icons/Physics.astro";
import Quantum from "@/icons/Quantum.astro";
import Quote from "@/icons/Quote.astro"
---

<nav class="p-4">
    <div class="flex items-center justify-between">
        <!-- Left - Icons -->
        <div class="flex items-center space-x-3">
            <button class="p-2">
                <Quantum />
            </button>
            <button
                class="p-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
            >
                <Mathematics />
            </button>
            <button
                class="p-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
            >
                <Physics />
            </button>
            <button
                class="p-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
            >
                <Chemistry />
            </button>
        </div>

        <!-- Center - Search Bar -->
        <div class="flex-1 mx-3">
            <div class="relative">
                <input
                    type="text"
                    placeholder="Search collections"
                    class="w-full px-4 py-2 pl-10 pr-4 text-sm bg-gray-50 rounded-lg focus:outline-none focus:border-transparent"
                />
                <div
                    class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none"
                >
                    <Search />
                </div>
            </div>
        </div>

        <!-- Right - Icons -->
        <div class="flex items-center space-x-3">
            <button
                class="p-2 bg-gray-100 hover:bg-gray-200 rounded-lg transition-colors"
            >
                <Quote />
            </button>
        </div>
    </div>
</nav>
